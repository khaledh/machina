{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Machina",
  "scopeName": "source.machina",
  "patterns": [
    { "include": "#comments" },
    { "include": "#attributes" },
    { "include": "#function-definitions" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#characters" },
    { "include": "#numbers" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.machina",
          "match": "//.*$"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.machina",
          "match": "@(\\w+)(?:\\(([^)]*)\\))?",
          "captures": {
            "1": { "name": "entity.name.tag.machina" },
            "2": { "name": "string.quoted.double.machina" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.machina",
          "match": "\\b(if|else|match|while|for|break|continue|return)\\b"
        },
        {
          "name": "keyword.other.machina",
          "match": "\\b(fn|type|trait|protocol|typestate|range|bounds|nonzero|let|var|in|inout|out|sink|move|self|prop|get|set|map|requires|role|flow|on|emit|reply)\\b"
        },
        {
          "name": "constant.language.boolean.machina",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "storage.modifier.machina",
          "match": "\\b(inout|out|sink|move)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.machina",
          "begin": "f?\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.machina",
              "match": "\\\\(n|r|t|\\\\|\"|'|0|x[0-9a-fA-F]{2})"
            },
            {
              "name": "meta.embedded.expression.machina",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        }
      ]
    },
    "characters": {
      "patterns": [
        {
          "name": "string.quoted.single.machina",
          "match": "'([^'\\\\]|\\\\(n|r|t|\\\\|'|\"|0|x[0-9a-fA-F]{2}))'"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.binary.machina",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.octal.machina",
          "match": "\\b0o[0-7_]+\\b"
        },
        {
          "name": "constant.numeric.hex.machina",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.decimal.machina",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.machina",
          "match": "\\b(u8|u16|u32|u64|i8|i16|i32|i64|f32|f64|bool|char|string|unit)\\b"
        },
        {
          "name": "entity.name.type.machina",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "function-definitions": {
      "patterns": [
        {
          "name": "meta.function.definition.machina",
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.machina" },
            "2": { "name": "entity.name.function.definition.machina" }
          }
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.call.machina",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.machina" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.machina",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.comparison.machina",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.arithmetic.machina",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.bitwise.machina",
          "match": "(&|\\||\\^|~|<<|>>)"
        },
        {
          "name": "keyword.operator.assignment.machina",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.machina",
          "match": "(->|=>)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.machina",
          "match": "[,;]"
        },
        {
          "name": "punctuation.accessor.machina",
          "match": "(\\.\\.|\\.|::)"
        },
        {
          "name": "punctuation.section.braces.machina",
          "match": "[{}]"
        },
        {
          "name": "punctuation.section.brackets.machina",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.section.parens.machina",
          "match": "[()]"
        }
      ]
    }
  }
}
