{
  "name": "machina-vscode",
  "displayName": "Machina",
  "description": "Machina language support for VS Code and Cursor.",
  "version": "0.0.1",
  "publisher": "khaledh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/khaledh/machina.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:machina",
    "onCommand:machina.showOutput",
    "onCommand:machina.ping",
    "onCommand:machina.restartLanguageServer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "machina",
        "aliases": [
          "Machina",
          "machina"
        ],
        "extensions": [
          ".mc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "machina",
        "scopeName": "source.machina",
        "path": "./syntaxes/machina.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "machina.showOutput",
        "title": "Machina: Show Output"
      },
      {
        "command": "machina.ping",
        "title": "Machina: Ping"
      },
      {
        "command": "machina.restartLanguageServer",
        "title": "Machina: Restart Language Server"
      }
    ],
    "configuration": {
      "title": "Machina",
      "properties": {
        "machina.languageServer.path": {
          "type": "string",
          "default": "",
          "description": "Path to the machina-lsp executable. If empty, the extension uses a local debug build when available, otherwise `machina-lsp` from PATH."
        },
        "machina.languageServer.args": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Extra command-line arguments passed to machina-lsp."
        },
        "machina.languageServer.debugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose extension-side LSP request/response logging in the Machina output channel."
        },
        "machina.tokenColors.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Apply default Machina token colors. Disable to rely entirely on your active color theme."
        },
        "machina.languageServer.experimentalFeatures": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Experimental Machina language features to enable in the language server (for example: [\"typestate\"])."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -watch -p .",
    "clean": "rm -rf out",
    "package:vsix": "npm run build && mkdir -p dist && npx @vscode/vsce package --out dist/machina-vscode-${npm_package_version}.vsix",
    "package:vsix:clean": "rm -rf dist && npm run package:vsix"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
